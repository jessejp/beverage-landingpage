---
const {
  subheading = "Did you know that...",
  body,
  button,
  campaign,
  textAlign = "start",
  accentColor,
  bodyTextColor,
} = Astro.props;
---

<div class="content text-container">
  {
    subheading && (
      <span class="subheading font-brand accent-color">{subheading}</span>
    )
  }
  <div class="divider"></div>
  <h1 class="font-brand">
    <slot />
  </h1>
  {
    body && (
      <>
        <div class="divider" />
        <p class="heading-body-text">{body}</p>
      </>
    )
  }
  {
    button && (
      <>
        <div class="divider" />
        <button class="primary drop-shadow border accent-color font-body">
          <b>{button}</b>
        </button>
      </>
    )
  }
  <div class="divider"></div>
  {
    !!campaign && (
      <p class="campaign-text font-flavor">25% off for a limited time!</p>
    )
  }
</div>

<style define:vars={{ accentColor, bodyTextColor, textAlign }}>
  .content.text-container {
    margin: 0 2vw;
    text-align: var(--textAlign);
    display: flex;
    flex-direction: column;
    align-items: var(--textAlign);
    z-index: 1;
  }

  .accent-color {
    color: var(--accentColor);
  }

  button.primary {
    background: #ffffff;
    border-radius: 0.35rem;
    padding: 0.8em 2em;
    font-size: 1.35rem;
    line-height: 1.35rem;
    cursor: pointer;
  }
  button.primary:hover {
    background: #f5f5f5;
  }
  button.primary:active {
    transform: translateY(2px);
    box-shadow: var(--accentColor) 3px 3px 2px;
  }

  h1 {
    color: #fff;
    line-height: 1em;
  }

  .text-container .subheading {
    font-size: 1.8em;
    line-height: 1.2em;
  }

  .text-container .heading-body-text {
    margin: 0;
    max-width: 30em;
    color: var(--bodyTextColor);
  }

  p.campaign-text {
    transform: rotate(350deg) translate(25%, 5%);
  }
  .content.text-container > * {
    width: fit-content;
  }

  .border {
    border: var(--accentColor) 2px solid;
  }

  .drop-shadow {
    box-shadow: var(--accentColor) 5px 5px 1px;
  }
</style>
