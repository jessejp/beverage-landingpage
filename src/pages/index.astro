---
import Layout from "../layouts/Layout.astro";
import CarouselSection from "../layouts/CarouselSection.astro";
import FinalWordsSection from "../layouts/FinalWordsSection.astro";
import Hero from "../layouts/Hero.astro";
import DrinkVariationBanner from "../layouts/DrinkVariationBanner.astro";
import BenefitsSection from "../layouts/BenefitsSection.astro";
---

<Layout title="Tropical Tango">
  <main>
    <Hero />
    <DrinkVariationBanner />
    <BenefitsSection />
    <CarouselSection />
    <FinalWordsSection />
  </main>
  <footer><p>Footer</p></footer>
</Layout>

<style is:global>
  main {
    overflow: hidden;
  }

  div.divider {
    width: 100%;
    height: 1px;
    margin: 0.5rem 0;
  }

  h1,
  h2,
  h3 {
    font-family: "Courier New", Courier, monospace;
    font-weight: 900;
    margin: 0;
  }
  h1,
  h2 {
    font-size: min(calc(2em + 8vw), calc(4em + 4vw));
    color: #ffcb77;
  }

  h2 {
    font-size: min(calc(2em + 3vw), calc(2em + 2vw));
    color: #fef9ef;
  }

  h3 {
    font-size: min(calc(1em + 2vw), calc(1.5em + 2vw));
    color: #fef9ef;
  }

  h4 {
    font-size: 1.6em;
    color: #000000;
  }

  p {
    font-size: 1.25rem;
  }
  button.primary {
    background: #fef9ef;
    border: black 2px solid;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.25em;
    font-weight: bold;
    cursor: pointer;
    box-shadow: black 5px 5px 1px;
  }
  button.primary:hover {
    background: #ffffff;
  }
  button.primary:active {
    transform: translateY(2px);
    box-shadow: black 3px 3px 1px;
  }

  section.half-n-half {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }
  section.half-n-half .content {
    max-width: 50%;
    width: 50%;
  }

  .half-n-half .img-container {
    position: relative;
    height: 100%;

    display: flex;
    align-items: center;
    justify-content: center;
  }

  section {
    padding: 2em 1em;
  }

  section.center {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  footer {
    height: 200px;
    text-align: center;
  }

  @media only screen and (max-width: 1200px) {
    section.half-n-half {
      flex-direction: column;
      justify-content: flex-start;
    }
    section.half-n-half .content {
      max-width: 100%;
      width: 100%;
      min-height: 50vh;
    }

    .half-n-half .img-container {
      order: 1;
    }
    .half-n-half .text-container {
      order: 2;
    }
  }
</style>
