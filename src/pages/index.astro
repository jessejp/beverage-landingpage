<style is:global>
  .interlude .three-columns {
    display: flex;
    width: 100vw;
    justify-content: space-evenly;
    align-items: center;
  }

  .interlude .three-columns .icons-col {
    display: flex;
    flex-direction: column;
    gap: 2em;
  }
  .interlude .three-columns .icons-col .row {
    display: flex;
    gap: 1em;
    align-items: center;
  }
  .row .icon-container {
    background: #17c3b2;
    padding: 0.5em;
    border-radius: 25%;
  }
  .row .icon-container .icon {
    font-size: 2rem;
  }

  .row .text-container {
    text-align: start;
  }
  .row .text-container p {
    margin: 0;
    font-size: 1.15rem;
  }

  h1,
  h2,
  h3 {
    font-family: "Courier New", Courier, monospace;
    font-weight: 900;
    margin: 0;
  }
  h1,
  h2 {
    font-size: 5em;
    color: #ffcb77;
  }

  h2 {
    font-size: calc(2.5em + 1vw);
    color: #fef9ef;
  }

  p {
    font-size: 1.25rem;
  }
  button {
    background: #fef9ef;
    border: black 2px solid;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.25em;
    font-weight: bold;
    cursor: pointer;
    box-shadow: black 5px 5px 1px;
  }
  button:hover {
    background: #ffffff;
  }
  button:active {
    transform: translateY(2px);
    box-shadow: black 3px 3px 1px;
  }

  section.half-n-half {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }
  section.half-n-half div {
    max-width: 50%;
  }
  @media only screen and (max-width: 768px) {
    section.half-n-half {
      flex-direction: column;
      justify-content: flex-start;
    }
    section.half-n-half div {
      max-width: 100%;
      max-height: 50vh;
    }

    .half-n-half .img-container {
      order: 1;
    }
    .half-n-half .text-container {
      order: 2;
    }
  }

  .half-n-half .img-container {
    position: relative;
    height: 100%;
  }

  .hero {
    background: #17c3b2;
    min-height: 100vh;
    overflow: hidden;
  }
  .hero img {
    rotate: -25deg;
  }
  .hero .content {
    z-index: 1;
  }
  .hero .content.text-container > * {
    width: fit-content;
    margin-left: 2rem;
  }
  .variation2 {
    min-height: 50vh;
    background: #ffcb77;
  }

  section {
    padding: 2em 1em;
  }

  section.center {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  section.interlude {
    min-height: 50vh;
    background: #b8ad95;
  }

  footer {
    height: 200px;
    text-align: center;
  }
</style>
