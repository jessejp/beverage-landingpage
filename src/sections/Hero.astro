<style>
  .accent-color {
    color: #dc86ac;
  }
  p {
    color: #87405f;
  }
  .hero {
    min-height: 100vh;
    overflow: hidden;
  }
  .hero h1 {
    color: #fff;
    line-height: 1em;
  }
  .hero .text-container .subheading {
    font-size: 1.8em;
    line-height: 1.2em;
  }

  .hero .text-container .heading-body-text {
    max-width: 30em;
  }

  p.campaign-text {
    transform: rotate(350deg) translate(25%, 5%);
  }
  .hero .content {
    z-index: 1;
  }
  .hero .content.text-container {
    margin: 0 2vw;
  }
  .hero .content.text-container > * {
    width: fit-content;
  }

  button.primary {
    background: #ffffff;
    border-radius: 0.35rem;
    padding: 0.8em 2em;
    font-size: 1.35rem;
    line-height: 1.35rem;
    cursor: pointer;
  }
  button.primary:hover {
    background: #f5f5f5;
  }
  button.primary:active {
    transform: translateY(2px);
    box-shadow: #dc86ac 3px 3px 2px;
  }

  .border {
    border: #dc86ac 2px solid;
  }

  .drop-shadow {
    box-shadow: #dc86ac 5px 5px 1px;
  }

  .hero .img-container {
    width: 100vw;
    height: 75vh;
    background: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.9) 0%,
      rgba(255, 255, 255, 0) 50%
    );
  }

  @media only screen and (max-width: 1200px) {
    .hero .img-container {
      height: 45vh;
      height: 45svh;
    }
    p.campaign-text {
      transform: rotate(350deg) translate(0, 5%);
    }
  }
</style>
